.panel.panel-default
  .panel-heading.clearfix
    .row
      .col-sm-9
        h3.panel-title(style='line-height: 1.3')
          small>
            = l(trip.start_datetime, format: :long)
          br
          = link_to trip do
            = trip.name
      .col-sm-3.text-right
        weather-outline(data-polyline='#{trip.polyline.to_json}')
        div
          small<
            = (trip.distance / 1000).round
            |km
          - if trip.temperature?
            br
            small.text-muted
              i.climacon<>(class='#{trip.icon}')
              = ' '
              = trip.temperature
